<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/blankFragment">

    <fragment
        android:id="@+id/blankFragment"
        android:name="com.santosgo.ejemplonavegacion.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" >
        <action
            android:id="@+id/action_blankFragment_to_blankFragment2"
            app:destination="@id/blankFragment2"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_blankFragment_to_blankFragment3"
            app:destination="@id/blankFragment3"
            app:popUpToInclusive="false" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="nombre" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment2"
        android:name="com.santosgo.ejemplonavegacion.BlankFragment2"
        android:label="fragment_blank2"
        tools:layout="@layout/fragment_blank2" >
        <action
            android:id="@+id/action_blankFragment2_to_blankFragment4"
            app:destination="@id/blankFragment4"
            app:popUpTo="@id/blankFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment3"
        android:name="com.santosgo.ejemplonavegacion.BlankFragment3"
        android:label="fragment_blank3"
        tools:layout="@layout/fragment_blank3" />
    <fragment
        android:id="@+id/blankFragment4"
        android:name="com.santosgo.ejemplonavegacion.BlankFragment4"
        android:label="fragment_blank4"
        tools:layout="@layout/fragment_blank4" />

</navigation>